@{
    Layout = "_LayoutLogado";
    ViewData["Title"] = "Logado - Produtos";
}
@section css {
    <link rel="stylesheet" href="~/css/Produtos/cadastroProdutos.css" />
}


<div class="container">
    <div class="row">
        <div class="col-4">
            <h3>Preview</h3>
            <img class="preview_img" src="~/image/defaultProduto.png" class="rounded float-start" alt="...">
            <figcaption class="figure-caption">A caption for the above image.</figcaption>
        </div>
        <div class="col-8 pl-1">
            <h3>Adicionar novo produto</h3>

            <div class="content-file">
                <div class="drag-area">
                    <header>PNG, JPGE ou JPG</header>
                    <label for="formFile" class="form-label">Selecione o Arquivo</label>
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>

            <div class="">
                <label for="NomeProduto" class="form-label">Titúlo</label>
                <input type="text" class="form-control" id="NomeProduto" placeholder="Caneta Multifocal">
            </div>
            <div class="mb-1">
                <label for="Descricao" class="form-label">Descrição</label>
                <input type="text" class="form-control" id="Descricao" placeholder="Produtos que pode ser utilizado......">
            </div>

            <div class="row">
                <div class="col">
                    <input type="number" class="form-control" placeholder="Preço R$" aria-label="Preço">
                </div>
                <div class="col-2">
                    <input type="number" class="form-control" placeholder="Qtd" aria-label="Quantidade">
                </div>
            </div>

            <div class="mb-1 select_assync">
                <label for="inputState" class="form-label">Categoria</label>
                <select id="inputState" class="form-select">
                    <option selected>Escolha...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
 </div>


<script src="@Url.Content("~/js/Produtos/cadastroProdutos.js")" type="text/javascript"></script>


